html
    head
        title Games reviews
        link(rel="stylesheet", href="/css/style.css")
    body
        if user
            h1 Welcome #{user.firstname} #{user.lastname}!
        
        a(href='/inscription/') Inscription
        br
        a(href='/login/') Connexion


        for article in articles
            article
                a(href='/review/' + article.id)
                    h1 #{article.title}
        

                
        form(method="POST")
            p
                strong Create a new article
            label(for="title") Title
            br
            input(type="text", id="title", name="title", placeholder="Some Great Article Title")
            br
            label(for="content") Review
            br
            textarea(id="content", name="content", place)
            br
            label(for="eval") Note
            br
            input(type="number", id="eval", name="eval", placeholder="Note entre 0 et 5")
            br
            button(type="submit") Submit

            
    